<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Application</title>
        <script>
            window.onsubmit = () => {
                return window.confirm("Are you sure you want to submit your application?\nYou will not be able to change your information once submitted.");
            }
        </script>
    </head>
    <body>
        <h1>Application</h1>
        <form action="/processApplication" method="post">
            <fieldset>
                <label><strong>Name: </strong><input type="text" name="name" id="name"></label><label><strong> Email Address: </strong><input type="email" name="email" id="email"></label>
                <br><br>
                <label><strong>GPA: </strong><input type="text" name="gpa" id="gpa"></label>
                <br><br>
                <label><strong>Background Information:</strong><br><textarea rows="6" cols="75" name="backgroundInfo" id="backgroundInfo"></textarea></label>
            </fieldset>
            <br>
            <input type="reset" value="Reset">
            <input type="submit" value="Submit Application">
        </form>
        <hr>
        <a href="/">HOME</a>
    </body>
</html>